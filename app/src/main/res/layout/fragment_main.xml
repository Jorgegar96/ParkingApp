<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/linea1"
                android:layout_width="230dp"
                android:layout_height="5dp"

                android:layout_marginStart="75dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/background_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/A1" />

            <ImageView
                android:id="@+id/linea2"
                android:layout_width="5dp"
                android:layout_height="199dp"

                android:layout_marginStart="15dp"
                android:layout_marginTop="195dp"
                android:background="@android:color/background_dark"
                app:layout_constraintStart_toEndOf="@+id/B2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/linea3"
                android:layout_width="5dp"
                android:layout_height="199dp"

                android:layout_marginStart="15dp"
                android:layout_marginTop="195dp"
                android:background="@android:color/background_dark"
                app:layout_constraintStart_toEndOf="@+id/A1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/A1"
                android:layout_width="50dp"
                android:layout_height="76dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="17dp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <ImageView
                android:id="@+id/A2"
                android:layout_width="50dp"
                android:layout_height="76dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp"
                app:layout_constraintStart_toEndOf="@+id/linea3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <ImageView
                android:id="@+id/A3"
                android:layout_width="50dp"
                android:layout_height="76dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp"
                app:layout_constraintStart_toEndOf="@+id/linea2"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <ImageView
                android:id="@+id/B1"
                android:layout_width="50dp"
                android:layout_height="76dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@+id/textView1"
                app:layout_constraintTop_toBottomOf="@+id/linea1" />

            <ImageView
                android:id="@+id/B2"
                android:layout_width="50dp"
                android:layout_height="76dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@+id/linea3"
                app:layout_constraintTop_toBottomOf="@+id/linea1" />

            <ImageView
                android:id="@+id/B3"
                android:layout_width="50dp"
                android:layout_height="76dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@+id/linea2"
                app:layout_constraintTop_toBottomOf="@+id/linea1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="224dp"
                android:text="A"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="80dp"
                android:text="B"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="145dp"
                android:text="1"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="71dp"
                android:layout_marginTop="145dp"
                android:text="2"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="71dp"
                android:layout_marginTop="145dp"
                android:text="3"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#042D6D"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/swipe_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>






